<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/chore_list_item"
    android:layout_width="match_parent"
    android:layout_height="@dimen/chore_list_item_height"
    android:padding="@dimen/chore_list_item_padding">

    <TextView
        android:id="@+id/name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_centerVertical="true"
        android:text="@string/placeholder_chore_name"
        android:textSize="@dimen/chore_list_item_text" />

    <TextView
        android:id="@+id/due_in"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:text="@string/placeholder_chore_due_in"
        android:textSize="@dimen/chore_list_item_text" />

</RelativeLayout>